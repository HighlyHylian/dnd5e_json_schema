{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Character.json",
    "title": "JSON Schema for D&D 5e Character data.",
    "description": "This schema describes a 5e character. Some data, such as ability score modifiers, are not included because they are extrapolated.<br/> Samples may be found at https://github.com/BrianWendt/dnd5e_json_schema/tree/master/samples/Character/",
    "$comment": "version 0.1.1",
    "type": "object",
    "required": ["name", "player", "race", "speed"],
    "properties": {
        "name": {
            "type": "string"
        },
        "player": {
            "type": "string"
        },
        "race": {
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "subtype": {
                    "type": "string"
                },
                "traits": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/feature"
                    }
                },
                "source": {
                    "$ref": "source.json"
                }
            }
        },
        "classes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/character_class"
            }
        },
        "background": {
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "option": {
                    "type": "string"
                },
                "description": {
                    "type": "string",
                    "input": "textarea"
                },
                "source": {
                    "$ref": "source.json"
                }
            }
        },
        "alignment": {
            "type": "string"
        },
        "xp": {
            "type": "integer",
            "minimum": 0,
            "default": 0
        },
        "speed": {
            "type": "array",
            "items": {
                "type": "string",
                "examples": ["30 ft.", "fly 80 ft", "swim 20 ft"]
            },
            "description": "Speed in feet"
        },
        "hit_points": {
            "type": "object",
            "properties": {
                "max": {
                    "type": "integer",
                    "default": 0
                },
                "current": {
                    "type": "integer"
                },
                "temporary": {
                    "type": "integer"
                }
            }
        },

        "inspiration": {
            "type": "string"
        },

        "skills": {
            "type": "object",
            "properties": {
                "Athletics": {
                    "type": "boolean",
                    "default": "false"
                },
                "Acrobatics": {
                    "type": "boolean",
                    "default": "false"
                },
                "SleightOfHand": {
                    "type": "boolean",
                    "default": "false"
                },
                "Stealth": {
                    "type": "boolean",
                    "default": "false"
                },
                "Arcana": {
                    "type": "boolean",
                    "default": "false"
                },
                "History": {
                    "type": "boolean",
                    "default": "false"
                },
                "Investigation": {
                    "type": "boolean",
                    "default": "false"
                },
                "Nature": {
                    "type": "boolean",
                    "default": "false"
                },
                "Religion": {
                    "type": "boolean",
                    "default": "false"
                },
                "AnimalHandling": {
                    "type": "boolean",
                    "default": "false"
                },
                "Insight": {
                    "type": "boolean",
                    "default": "false"
                },
                "Medicine": {
                    "type": "boolean",
                    "default": "false"
                },
                "Perception": {
                    "type": "boolean",
                    "default": "false"
                },
                "Survival": {
                    "type": "boolean",
                    "default": "false"
                },
                "Deception": {
                    "type": "boolean",
                    "default": "false"
                },
                "Intimidation": {
                    "type": "boolean",
                    "default": "false"
                },
                "Performance": {
                    "type": "boolean",
                    "default": "false"
                },
                "Persuasion": {
                    "type": "boolean",
                    "default": "false"
                }
            }
        },
        "weapon_proficiencies": {
            "type": "array",
            "items": {
                "type": "string",
                "examples": ["Simple Weapons", "Martial Weapons"]
            }
        },
        "armor_proficiencies": {
            "type": "array",
            "items": {
                "type": "string",
                "examples": ["Light Armor", "Medium Armor", "Heavy Armor", "Shields"]
            }
        },
        "tool_proficiencies": {
            "type": "array",
            "items": {
                "type": "string",
                "examples": ["Artisan's Tools", "Disguise Kit"]
            }
        },
        "languages": {
            "type": "array",
            "items": {
                "type": "string",
                "examples": ["Common", "Abyssal", "Draconic", "Dwarvish", "Elven"]
            }
        },
        "ability_scores": {
            "type": "object",
            "required": ["str", "dex", "con", "int", "wis", "cha"],
            "properties": {
                "str": {
                    "type": "integer",
                    "default": 10,
                    "minimum": 0,
                    "maximum": 20,
                    "description": "Strength"
                },
                "dex": {
                    "type": "integer",
                    "default": 10,
                    "minimum": 0,
                    "maximum": 20,
                    "description": "Dexterty"
                },
                "con": {
                    "type": "integer",
                    "default": 10,
                    "minimum": 0,
                    "maximum": 20,
                    "description": "Constitution"
                },
                "int": {
                    "type": "integer",
                    "default": 10,
                    "minimum": 0,
                    "maximum": 20,
                    "description": "Intelligence"
                },
                "wis": {
                    "type": "integer",
                    "default": 10,
                    "minimum": 0,
                    "maximum": 20,
                    "description": "Wisdom"
                },
                "cha": {
                    "type": "integer",
                    "default": 10,
                    "minimum": 0,
                    "maximum": 20,
                    "description": "Charisma"
                }
            }
        },
        "saving_throws": {
            "type": "object",
            "properties": {
                "str": {
                    "type": "boolean",
                    "default": "false"
                },
                "dex": {
                    "type": "boolean",
                    "default": "false"
                },
                "con": {
                    "type": "boolean",
                    "default": "false"
                },
                "int": {
                    "type": "boolean",
                    "default": "false"
                },
                "wis": {
                    "type": "boolean",
                    "default": "false"
                },
                "cha": {
                    "type": "boolean",
                    "default": "false"
                }
            }
        },
        "description": {
            "type": "object",
            "properties": {
                "age": {
                    "type": "integer",
                    "minimum": 0
                },
                "eyes": {
                    "type": "string"
                },
                "hair": {
                    "type": "string"
                },
                "skin": {
                    "type": "string"
                },
                "weight": {
                    "type": "integer",
                    "minimum": 0
                },
                "height": {
                    "type": "string"
                },
                "personality": {
                    "type": "string"
                },
                "ideal": {
                    "type": "string"
                },
                "bond": {
                    "type": "string"
                },
                "flaw": {
                    "type": "string"
                },
                "backstory": {
                    "type": "string",
                    "input": "textarea"
                },
                "physical": {
                    "type": "string"
                }
            }
        },
        "armor_class": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 10
                },
                "description": {
                    "type": "string",
                    "default": "Unarmored"
                }
            }
        },
        "shield": {
            "type": "boolean",
            "default": "false"
        },
        "weapons": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/weapon"
            }
        },
        "spells": {
            "type": "array",
            "items": {
                "$ref": "https://brianwendt.github.io/dnd5e_json_schema/Spell.json"
            }
        },
        "features": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/feature"
            }
        },
        "feats": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/feat"
            }
        },
        "treasure": {
            "type": "object",
            "properties": {
                "pp": {
                    "type": "number",
                    "default": 0,
                    "description": "Platimum"
                },
                "ep": {
                    "type": "number",
                    "default": 0,
                    "description": "Electrum"
                },
                "gp": {
                    "type": "number",
                    "default": 0,
                    "description": "Gold"
                },
                "sp": {
                    "type": "number",
                    "default": 0,
                    "description": "Silver"
                },
                "cp": {
                    "type": "number",
                    "default": 0,
                    "description": "Copper"
                }
            }
        },
        "equipment": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/equipment"
            }
        },
        "condtions": {
            "type": "object",
            "properties": {
                "Blinded": {
                    "type": "boolean",
                    "default": "false"
                },
                "Charmed": {
                    "type": "boolean",
                    "default": "false"
                },
                "Deafened": {
                    "type": "boolean",
                    "default": "false"
                },
                "Frightened": {
                    "type": "boolean",
                    "default": "false"
                },
                "Grapled": {
                    "type": "boolean",
                    "default": "false"
                },
                "Incapacitated": {
                    "type": "boolean",
                    "default": "false"
                },
                "Invisible": {
                    "type": "boolean",
                    "default": "false"
                },
                "Paralyzed": {
                    "type": "boolean",
                    "default": "false"
                },
                "Petrifed": {
                    "type": "boolean",
                    "default": "false"
                },
                "Poisoned": {
                    "type": "boolean",
                    "default": "false"
                },
                "Prone": {
                    "type": "boolean",
                    "default": "false"
                },
                "Restrained": {
                    "type": "boolean",
                    "default": "false"
                },
                "Stunned": {
                    "type": "boolean",
                    "default": "false"
                },
                "Unconscious": {
                    "type": "boolean",
                    "default": "false"
                }
            }
        }
    },
    "definitions": {
        "character_class": {
            "$id": "#/definitions/character_class",
            "type": "object",
            "required": ["name", "level"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "level": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 20
                },
                "subtype": {
                    "type": "string"
                },
                "hit_die": {
                    "type": "string",
                    "enum": ["d4", "d6", "d8", "d10", "d12", "d20"]
                },
                "spellcasting": {
                    "type": "string",
                    "default": "",
                    "enum": ["", "str", "dex", "con", "int", "wis", "cha"]
                },
                "source": {
                    "$ref": "source.json"
                }
            }
        },
        "weapon": {
            "$id": "#/definitions/weapon",
            "type": "object",
            "required": ["name", "damage", "damage_type"],
            "properties": {
                "name": {
                    "type": "string",
                    "examples": ["Dart"]
                },
                "damage": {
                    "type": "string",
                    "examples": ["1d4", "2d6", "1d8+1"]
                },
                "damage_type": {
                    "$ref": "#/definitions/damage_type"
                },
                "stat": {
                    "type": "string",
                    "default": "str",
                    "enum": ["str", "dex", "con", "int", "wis", "cha"]
                },
                "props": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "examples": ["Finesse", "Thrown (range 20/60)"]
                },
                "description": {
                    "type": "string",
                    "input": "textarea"
                },
                "equipped": {
                    "type": "boolean",
                    "default": "false"
                },
                "source": {
                    "$ref": "source.json"
                }
            }
        },
        "feature": {
            "$id": "#/definitions/feature",
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string",
                    "input": "textarea"
                },
                "source": {
                    "$ref": "source.json"
                }
            }
        },
        "feat": {
            "$id": "#/definitions/feat",
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string",
                    "input": "textarea"
                },
                "source": {
                    "$ref": "source.json"
                }
            }
        },
        "equipment": {
            "$id": "#/definitions/equipment",
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "weight": {
                    "type": "number",
                    "default": 0
                },
                "quantity": {
                    "type": "number",
                    "default": 0
                },
                "description": {
                    "type": "string",
                    "input": "textarea"
                },
                "source": {
                    "$ref": "source.json"
                }
            }
        },
        "damage_type": {
            "$id": "#/definitions/damage_type",
            "type": "string",
            "default": "none",
            "enum": ["none", "Piercing", "Slashing", "Bludgeoning", "Acid", "Cold", "Fire", "Force", "Lightning", "Necrotic", "Poison", "Psychic", "Radiant", "Thunder"]
        }
    }
}